<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html 
     PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <title>SCADR-Rails</title>
    <!--
    <%= stylesheet_link_tag "general", :media => "screen, print" %>
    -->
  </head>
  <body>
    <h1><%= link_to "SCADR", root_path %></h1>
    <ul>
    <% if current_user_session -%>
      <li>Hello, <%= current_user.username %> (<%= link_to "Log Out", logout_path %>)</li>
      <li><%= link_to "Find Other Users", users_path %></li>
    <% else -%>
      <li><%= link_to "Log In", login_path %></li>
    <% end -%>
    </ul>
    <div id="body">
      <% if flash[:notice] -%>
        <div id="flash_notice"><%= flash[:notice] %></div>
      <% end -%>
      <% if flash[:error] -%>
        <div id="flash_error"><%= flash[:error] %></div>
      <% end -%>
      <%= yield %>
    </div>
  </body>
</html>